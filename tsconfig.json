{
  "compilerOptions": {
    "allowJs": true, // Require for nectis-engine-core.js.
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true, // Required for Papaparse.
    "module": "esnext",
    "moduleResolution": "node", // Required for node imports such as '@nectis/nectis-common-types'.
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true, // Required for embeddedConnectionTypes.json
    "strictNullChecks": true,
    "strictPropertyInitialization": false, // TODO: Change this to true.
    "target": "esnext"
  },
  "include": ["./**/*"], // Required because 'allowJS' is true.
  "exclude": ["gruntfile.js", "rollup.config.js", "dist/**/*"] // Required because 'allowJS' is true.
}
